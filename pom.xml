	<build>
		<finalName>ala-web</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
		      <plugin>
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-war-plugin</artifactId>
		        <configuration>
		          <dependentWarExcludes>
		              WEB-INF/lib/spring-context-2.0.jar,
		              WEB-INF/lib/spring-aop-2.0.jar,
		              WEB-INF/lib/spring-dao-2.0.jar,
		              WEB-INF/lib/spring-support-2.0.jar,
		              WEB-INF/lib/spring-jdbc-2.0.jar,
		              WEB-INF/lib/spring-jpa-2.0.jar,
		              WEB-INF/lib/spring-mock-2.0.jar,
		              WEB-INF/lib/spring-web-2.0.jar,
                      WEB-INF/lib/spring-webmvc-2.0.jar,
                      WEB-INF/lib/mysql-connector-java-3.1.13.jar,
                      WEB-INF/lib/commons-logging-1.0.4.jar,
                      WEB-INF/lib/commons-httpclient-3.0.1.jar,
                      WEB-INF/lib/commons-codec-1.2.jar,
                      WEB-INF/lib/commons-io-1.2.jar,
                      WEB-INF/lib/commons-io-1.3.2.jar,
                      WEB-INF/lib/commons-lang-2.1.jar,
                      WEB-INF/lib/dom4j-core-1.4-dev-8.jar,
                      WEB-INF/lib/hibernate-3.2.0.cr4.jar
		           </dependentWarExcludes>
		        </configuration>
		       </plugin>
        </plugins>
