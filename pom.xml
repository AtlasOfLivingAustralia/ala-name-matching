					<scalaVersion>${scala.version}</scalaVersion>
					<args>
						<arg>-target:jvm-1.6</arg>
                        <arg>-deprecation</arg>
                        <arg>-nowarn</arg>
					</args>
					<jvmArgs>
						<jvmArg>-Xmx2G</jvmArg>
					</jvmArgs>
				</configuration>
			</plugin>
			<plugin>
