    <!-- taxonomyRegionBrowseController -->
    <bean id="taxonomyRegionBrowseController" class="org.ala.web.controller.TaxonomyRegionBrowseController">
		<property name="geoRegionDAO" ref="geoRegionDAORO"/>
        <property name="occurrenceFacetDAO" ref="occurrenceFacetDAORO" />
        <property name="viewNamePrefix" value="taxonomyRegionBrowse"/>
        <property name="urlRoot" value="region"/>
		<property name="supportedPatterns">
	      <list>
	        <list>
	          <value>region</value>
	        </list>
            <list>
	          <value>region</value>
              <value>view</value>
