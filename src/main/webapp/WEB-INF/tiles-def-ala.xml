<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN" "http://struts.apache.org/dtds/tiles-config_1_1.dtd">
<tiles-definitions>

    <definition name="fullSearchView" extends="mainLayout">
        <put name="subtitle" value="/WEB-INF/jsp/search/searchSubtitle.jsp"/>
        <put name="headcontent" value="/WEB-INF/jsp/search/headcontent.jsp"/>
        <put name="content" value="/WEB-INF/jsp/search/fullSearch.jsp"/>
    </definition>
    
    <!-- View for a Geographic Region -->
    <definition name="geoRegionView" extends="mainLayout">
        <put name="subtitle" value="/WEB-INF/jsp/region/drilldown/regionSubtitle.jsp"/>
        <put name="headcontent" value="/WEB-INF/jsp/region/headcontent.jsp"/>
        <put name="content" value="/WEB-INF/jsp/region/drilldown/view.jsp"/>
    </definition>
    
    <!--  Browse view for Geographic Region -->
    <definition name="geoRegionBrowse" extends="mainLayout">
        <put name="subtitle" value="/WEB-INF/jsp/region/browseSubtitle.jsp"/>
        <put name="headcontent" value="/WEB-INF/jsp/region/headcontent.jsp"/>
        <put name="content" value="/WEB-INF/jsp/region/browse.jsp"/>
    </definition>
    
    <!-- View for rendering a SLD -->
    <definition name="sld" extends="ajaxLayout">
        <put name="content" value="/WEB-INF/jsp/region/sld.jsp"/>
    </definition>

     <!-- View for rendering a JSON web service for region resource -->
    <definition name="regionResourceJson" path="/WEB-INF/jsp/region/resourcesTable.jsp"/>
     <definition name="testDataTable" path="/WEB-INF/jsp/region/testDataTable.jsp"/>

    
</tiles-definitions>