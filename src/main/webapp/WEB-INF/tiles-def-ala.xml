<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN" "http://struts.apache.org/dtds/tiles-config_1_1.dtd">
<tiles-definitions>

    <definition name="annotationLayout" path="/layouts/annotationLayout.jsp">
        <put name="title" value="portal.title"/>
        <put name="subtitle" value="/WEB-INF/jsp/stats.jsp"/>
        <put name="keywords" value=""/>     
        <put name="headcontent" value=""/>
        <put name="header" value="/WEB-INF/jsp/header.jsp"/>
        <put name="topmenu" value="/WEB-INF/jsp/menu/topMenu.jsp"/>
        <put name="content" value=""/>
        <put name="breadcrumbs" value="/WEB-INF/jsp/user/breadcrumbs.jsp"/>
        <put name="footer" value="/common/footer.jsp"/>
    </definition>

    <definition name="fullSearchView" extends="mainLayout">
        <put name="subtitle" value="/WEB-INF/jsp/search/searchSubtitle.jsp"/>
        <put name="headcontent" value="/WEB-INF/jsp/search/headcontent.jsp"/>
        <put name="content" value="/WEB-INF/jsp/search/fullSearch.jsp"/>
    </definition>
    
    <!-- View for a Geographic Region -->
    <definition name="geoRegionView" extends="mainLayout">
        <put name="subtitle" value="/WEB-INF/jsp/region/drilldown/regionSubtitle.jsp"/>
        <put name="headcontent" value="/WEB-INF/jsp/region/headcontent.jsp"/>
        <put name="content" value="/WEB-INF/jsp/region/drilldown/view.jsp"/>
    </definition>
    
    <!--  Browse view for Geographic Region -->
    <definition name="geoRegionBrowse" extends="mainLayout">
        <put name="subtitle" value="/WEB-INF/jsp/region/browseSubtitle.jsp"/>
        <put name="headcontent" value="/WEB-INF/jsp/region/headcontent.jsp"/>
        <put name="content" value="/WEB-INF/jsp/region/browse.jsp"/>
    </definition>
    
    <!-- Occurrence Record Drilldown - with Annotations -->
    <definition name="occurrenceRecord" extends="annotationLayout">
        <put name="subtitle" value="/WEB-INF/jsp/occurrence/drilldown/occurrenceSubtitle.jsp"/>
        <put name="headcontent" value="/WEB-INF/jsp/occurrence/headcontent.jsp"/>
        <put name="content" value="/WEB-INF/jsp/occurrence/drilldown/view.jsp"/>
    </definition>
    
    <!-- View for rendering a SLD -->
    <definition name="sld" extends="ajaxLayout">
        <put name="content" value="/WEB-INF/jsp/region/sld.jsp"/>
    </definition>

     <!-- View for rendering a JSON web service for region resource -->
    <definition name="regionResourceJson" path="/WEB-INF/jsp/region/resourcesTable.jsp"/>
    <definition name="testDataTable" path="/WEB-INF/jsp/region/testDataTable.jsp"/>

    <!-- Browse View for taxonomy browse region  -->
    <definition name="taxonomyRegionBrowse" extends="mainLayout">
        <put name="subtitle" value="/WEB-INF/jsp/taxonomy/regionBrowseSubtitle.jsp"/>
        <put name="headcontent" value="/WEB-INF/jsp/taxonomy/headcontent.jsp"/>
        <put name="content" value="/WEB-INF/jsp/taxonomy/regionBrowse.jsp"/>
    </definition>
    <definition name="taxonomyRegionBrowse.json" path="/WEB-INF/jsp/taxonomy/jsonRegionBrowse.jsp"/>
    
    <!-- Webservices Registration  -->
    <definition name="webservices.start" page="/WEB-INF/jsp/ws/start.jsp"/>
    <definition name="webservices.check" page="/WEB-INF/jsp/ws/check.jsp"/>
    <definition name="webservices.list" page="/WEB-INF/jsp/ws/list.jsp"/>
    
</tiles-definitions>